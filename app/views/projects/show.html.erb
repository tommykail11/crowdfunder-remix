<h1><%= @project.title%></h1>

<p>
  A project by <%= @project.user.first_name %> <%= @project.user.last_name %>
</p>

<%= form_for [@project, @pledge] do |f| %>

	<%= render 'layouts/shared/form_errors', :f => f %>

	<%= f.number_field :amount, placeholder: "Amount", class: "input-block-level" %>

	<div class="form-actions">
    <%= f.submit 'Pledge Now', class: 'btn btn-primary' %>
  </div>
<% end %>